extends layout.pug


block content
  form(action='/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    div
      label(type='field' ) Email
      input(type='text' name='email') Email
    div
    div
      label(type='field' )
      input(type='text' name='hashedPassword') Password
    div
    div
      button(type='submit' ) Login
    div
