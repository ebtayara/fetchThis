extends layout.pug


block content
  div(class='formContainer')
    form(action='/users/login' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      h1(class="loginHeader") Login
      div(class="loginOuterContainer")
        div(class="loginInnerContainer")
          div(class='form-group')
            label(type='field' ) Email
            input(type='text' name='email')
          div(class='form-group')
            label(type='field' ) Password
            input(type='password' name='hashedPassword')
          div(class="loginContainer")
            button(type='submit' class="loginButton" ) Login
    if errors
      ul(class='errorContainer')
        each e,i in errors
          li(class="error")= errors[i]
